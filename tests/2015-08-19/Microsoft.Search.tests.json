{
  "tests": [
    {
      "name": "Search - Empty JSON",
      "definition": "http://schema.management.azure.com/schemas/2015-08-19/Microsoft.Search.json#/resourceDefinitions/searchServices",
      "expectedErrors": [
        {
          "message": "Missing required property: type",
          "dataPath": "/"
        },
        {
          "message": "Missing required property: apiVersion",
          "dataPath": "/"
        },
        {
          "message": "Missing required property: properties",
          "dataPath": "/"
        },
        {
          "message": "Missing required property: location",
          "dataPath": "/"
        },        
        {
          "message": "Missing required property: sku",
          "dataPath": "/"
        }        
      ],
      "json": { }
    },
    {
      "name": "Search - Empty properties",
      "definition": "http://schema.management.azure.com/schemas/2015-08-19/Microsoft.Search.json#/resourceDefinitions/searchServices",
      "json": {
        "type": "Microsoft.Search/searchServices",
        "apiVersion": "2015-08-19",
        "location": "West Us",
        "sku": { "name": "free" },
        "properties": { }
      }
    },
    {
      "name": "Search - Replica count out of range",
      "definition": "http://schema.management.azure.com/schemas/2015-08-19/Microsoft.Search.json#/resourceDefinitions/searchServices",
      "expectedErrors": [
        {
          "message": "Data does not match any schemas from \"oneOf\"",
          "dataPath": "/properties"
        }
      ],
      "json": {
        "type": "Microsoft.Search/searchServices",
        "apiVersion": "2015-08-19",
        "location": "West Us",
        "sku": { "name": "free" },
        "properties": {
          "replicaCount": 999,
          "partitionCount": 1,
          "hostingMode": "default"
        }
      }
    },
    {
      "name": "Search - Partition count out of range",
      "definition": "http://schema.management.azure.com/schemas/2015-08-19/Microsoft.Search.json#/resourceDefinitions/searchServices",
      "expectedErrors": [
        {
          "message": "Data does not match any schemas from \"oneOf\"",
          "dataPath": "/properties"
        }
      ],
      "json": {
        "type": "Microsoft.Search/searchServices",
        "apiVersion": "2015-08-19",
        "location": "West Us",
        "sku": { "name": "free" },
        "properties": {
          "replicaCount": 1,
          "partitionCount": 999,
          "hostingMode": "default"
        }
      }
    },
    {
      "name": "Search - Invalid hosting mode",
      "definition": "http://schema.management.azure.com/schemas/2015-08-19/Microsoft.Search.json#/resourceDefinitions/searchServices",
      "expectedErrors": [
        {
          "message": "Data does not match any schemas from \"oneOf\"",
          "dataPath": "/properties"
        }
      ],
      "json": {
        "type": "Microsoft.Search/searchServices",
        "apiVersion": "2015-08-19",
        "location": "West Us",
        "sku": { "name": "free" },
        "properties": {
          "replicaCount": 1,
          "partitionCount": 1,
          "hostingMode": "invalidhostingmode"
        }
      }
    },
    {
      "name": "Search - Valid service definition",
      "definition": "http://schema.management.azure.com/schemas/2015-08-19/Microsoft.Search.json#/resourceDefinitions/searchServices",
      "json": {
        "type": "Microsoft.Search/searchServices",
        "apiVersion": "2015-08-19",
        "location": "West Us",
        "sku": { "name": "free" },
        "properties": {
          "replicaCount": 1,
          "partitionCount": 1,
          "hostingMode": "default"
        }
      }
    }
  ]
}
