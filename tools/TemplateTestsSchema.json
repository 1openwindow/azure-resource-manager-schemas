{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "allOf": [
        {
            "$ref": "http://json-schema.org/draft-04/schema#"
        },
        {
            "$ref": "#/definitions/templateTestsSchema"
        }
    ],

    "definitions": {
        "templateTestsSchema": {
            "title": "Azure Resource Template Test Schema",
            "type": "object",
            "properties": {
                "id": { "type": "string" },
                "$schema": {
                    "type": "string",
                    "format": "uri"
                },
                "title": { "type": "string" },
                "tests": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "properties": {
                            "name": {
                                "type": "string",
                                "minLength": 1
                            },
                            "valid": {
                                "type": "boolean"
                            },
                            "errors": {
                                "type": "array",
                                "minLength": 1,
                                "items": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "minLength": 1
                                        },
                                        "dataPath": {
                                            "type": "string",
                                            "minLength": 1
                                        },
                                        "schemaPath": {
                                            "type": "string",
                                            "minLength": 1
                                        }
                                    },
                                    "required": [ "message", "dataPath", "schemaPath" ]
                                }
                            },
                            "deploymentTemplate": { }
                        },
                        "additionalItems": false,
                        "additionalProperties": false,
                        "required": [ "name", "valid", "deploymentTemplate" ]
                    }
                }
            },
            "required": [ "tests" ],
            "additionalItems": false,
            "additionalProperties": false
        }
    }
}