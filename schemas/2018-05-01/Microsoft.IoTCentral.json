{
  "id": "https://schema.management.azure.com/schemas/2018-05-01/Microsoft.IoTCentral.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Microsoft.IoTCentral",
  "description": "Microsoft IoTCentral Resource Types",
  "resourceDefinitions": {
    "IoTApps": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Microsoft.IoTCentral/IoTApps"
          ]
        },
        "name": {
          "type": "string",
          "description": "The name of IoT Central application"
        },
        "url": {
          "oneOf": [
            {
              "type": "string",
              "pattern": "^([a-z0-9-])+$",
              "minLength": 1,
              "maxLength": 63
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The subdomain name of IoT Central application url"
        },
        "sku": {
          "oneOf": [
            {
              "$ref": "#/definitions/IoTAppSku"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "template": {
          "oneOf": [
            {
              "$ref": "#/definitions/IoTAppTemplate"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "Predefined IoT Central application template"
        },
        "location": {
          "oneOf": [
            {
              "$ref": "#/definitions/IoTAppLocation"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The location of IoT Central application resource type"
        },
        "apiVersion": {
          "type": "string",
          "enum": [
            "2018-05-01"
          ]
        },
        "tags": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "Key-value pairs of additional properties for IoT Central application resource type"
        },
        "properties": {
          "oneOf": [
            {
              "$ref": "#/definitions/IoTAppProperties"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The rule properties of the resource"
        }
      },
      "required": [
        "type",
        "name",
        "url",
        "sku",
        "template",
        "location",
        "apiVersion",
        "properties"
      ],
      "description": "Microsoft.IoTCentral/IoTApps"
    }
  },
  "definitions": {
    "IoTAppSku": {
      "type": "object",
      "description": "List of possible IoT Central application SKUs",
      "properties": {
        "name": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "F1",
                "S1"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "tier": {
          "type": "string",
          "readOnly": true,
          "description": "Pricing tier of the IoT Central application"
        }
      },
      "required": [
        "name"
      ]
    },
    "IoTAppTemplate": {
      "type": "object",
      "description": "List of available IoT Central application templates",
      "properties": {
        "name": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "Contoso",
                "Devkits",
                "Custom"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "version": {
          "type": "string",
          "description": "The version of IoT Central application template"
        }
      },
      "required": [
        "name"
      ]
    },
    "IoTAppLocation": {
      "type": "object",
      "description": "List of available locations for IoT Central application",
      "properties": {
        "name": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "West Europe",
                "West US",
                "North Europe",
                "East US",
                "East US 2"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        }
      },
      "required": [
        "name"
      ]
    },
    "IoTAppProperties": {
      "type": "object",
      "properties": {
        "policies": {},
        "rules": {},
        "actions": {}
      },
      "description": "Properties of IoT Central application"
    }
  }
}