{
  "id": "https://schema.management.azure.com/schemas/2015-10-31/Microsoft.Automation.json#",
  "$schema": "https://json-schema.org/draft-04/schema#",
  "title": "Microsoft.Automation",
  "description": "Microsoft Automation Resource Types",
  "resourceDefinitions": {
    "automationAccounts": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "Microsoft.Automation/automationAccounts"
          ]
        },
        "apiVersion": {
          "enum": [
            "2015-10-31"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "sku": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "family": {
                      "type": "string",
                      "description": "Automation account pricing tier."
                    },
                    "name": {
                      "oneOf": [
                        {
                          "enum": [
                            "Free",
                            "Basic"
                          ]
                        },
                        {
                          "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                        }
                      ],
                      "description": "Automation account pricing tier."
                    }                    
                  },
                  "required": [
                    "name"
                  ]
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "Automation account pricing tier."
            }
          },
          "required": [
            "sku"
          ]
        },
        "name": {
          "type": "string",
          "description": "Automation account pricing tier."
        },
        "required": [
          "properties"
        ]
      },
      "required": [
        "apiVersion",
        "name",
        "properties",
        "type"
      ],
      "description": "Automation account pricing tier."
    },
    "runbooks": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "Microsoft.Automation/automationAccounts/runbooks",
            "runbooks"
          ]
        },
        "apiVersion": {
          "enum": [
            "2015-10-31"
          ]
        },
        "name": {
          "type": "string",
          "description": "The name of the Runbook."
        },
        "properties": {
          "type": "object",
          "properties": {
            "logVerbose": {
              "oneOf": [
                {
                  "type": "boolean"
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "True or false indicating whether to log verbose streams for the runbook's jobs. The default is false."
            },
            "logProgress": {
              "oneOf": [
                {
                  "type": "boolean"
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "True or false indicating whether to log progress streams for the runbook's jobs. . The default is false."
            },
            "description": {
              "type": "string",
              "description": "Description for the runbook."
            },
            "runbookType": {
              "oneOf": [
                {
                  "enum": [
                    "PowerShellWorkflow",
                    "PowerShell",
                    "Graph"
                  ]
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "Type of runbook."
            },
            "publishContentLink": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "uri": {
                      "type": "string",
                      "description": "Public location of an existing runbook file containing runbook. This location can be any public URL. If using Azure Storage, make sure the blob is public, or use a SAS link to the Azure Storage blob."
                    },
                    "contentVersion": {
                      "type": "string",
                      "description": "Runbook content version value."
                    },
                    "contentHash": {
                      "type": "object",
                      "properties": {
                        "algorithm": {
                          "type": "string",
                          "description": "The encryption algorithm used to create the hash."
                        },
                        "value": {
                          "type": "string",
                          "description": "Base64-encoded hash value of the of the content at the content link."
                        }
                      }
                    }
                  },
                  "required": [
                    "uri"
                  ]
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "A published runbook."
            }
          },
          "required": [
            "name",
            "properties",
            "runbookType",
            "publishedContentLink"
          ]
        }
      },
      "description": "An Automation runbook."
    },
    "modules": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "Microsoft.Automation/automationAccounts/modules",
            "modules"
          ]
        },
        "name": {
          "type": "string",
          "description": "The name of the PowerShell module."
        },
        "apiVersion": {
          "enum": [
            "2015-10-31"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "isGlobal": {
              "oneOf": [
                {
                  "type": "boolean"
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "True or false indicating whether the module is a global Automation module or is a user module.  Select False to specify that the module is a user module."
            },
            "version": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "The PowerShell module version number."
            },
            "sizeInBytes": {
              "oneOf": [
                {
                  "type": "integer"
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "The size of the PowerShell module."
            },
            "activityCount": {
              "oneOf": [
                {
                  "type": "integer"
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "The number of activities in the PowerShell module."
            },
            "creationTime": {
              "type": "string",
              "description": "The time the PowerShell module was first imported to the Automation account."
            },
            "lastModifiedTime": {
              "type": "string",
              "description": "The time the PowerShell module was last modified in the Automation account."
            },
            "provisioningState": {
              "type": "string",
              "description": "The current status of the PowerShell module stating whether the module has successfully extracted, is currently extracting, or has failed to extract the module's cmdlets."
            }
          }
        }
      },
      "required": [
        "name",
        "properties"
      ],
      "description": "A PowerShell module."
    },
    "certificates": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "Microsoft.Automation/automationAccounts/certificates",
            "certificates"
          ]
        },
        "name": {
          "type": "string",
          "description": "The name of the certificate."
        },
        "apiVersion": {
          "enum": [
            "2015-10-31"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string",
              "description": "The description for the certificate."
            },
            "isExportable": {
              "oneOf": [
                {
                  "type": "boolean"
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "True/False indicating whether the certificate is exportable or not."
            },
            "thumbprint": {
              "type": "string",
              "description":  "The thumbprint for the certificate."
            },
            "expiryTime": {
              "type": "string",
              "description": "The expiration time for the certificate."
            },
            "creationTime": {
              "type": "string",
              "description": "The time the certificate was created in the Automation account."
            },
            "lastModifiedTime": {
              "type": "string",
              "description": "The time the certificate was last modified in the Automation account. "
            }
          }
        }
      },
      "required": [
        "name",
        "properties"
      ],
      "description": "A certificate asset."
    },
    "connections": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "Microsoft.Automation/automationAccounts/connections",
            "connections"
          ]
        },
        "name": {
          "type": "string",
          "description": "The name of the connection."
        },
        "apiVersion": {
          "enum": [
            "2015-10-31"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "creationTime": {
              "type": "string",
              "description": "The time the connection was created in the Automation account."
            },
            "lastModifiedTime": {
              "type": "string",
              "description": "The time the connection was last modified in the Automation account."
            },
            "description": {
              "type": "string",
              "description": "The description for the connection."
            },
            "connectionType": {
              "oneOf": [
                {
                  "type":  "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "The type of the connection.  This is determined by the json file in the module that defines the connection and the type."
                    }
                  }
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "The type of the connection."
            }
          }
        }
      },
      "required": [
        "name",
        "properties"
      ],
      "description": "A connection asset."
    },
    "variables": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "Microsoft.Automation/automationAccounts/variables",
            "variables"
          ]
        },
        "name": {
          "type": "string",
          "description": "The name of the variable."
        },
        "apiVersion": {
          "enum": [
            "2015-10-31"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "creationTime": {
              "type": "string",
              "description": "The time the variable was created in the Automation account."
            },
            "lastModifiedTime": {
              "type": "string",
              "description": "The time the variable was last modified in the Automation account."
            },
            "isEncrypted": {
              "oneOf": [
                {
                  "type": "boolean"
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "True or false indicating whether the the variable is encrypted or not."
            },
            "value": {
              "type": "string",
              "description": "The value of the variable."
            },
            "description": {
              "type": "string",
              "description": "The description for the variable."
            }
          }
        }
      },
      "required": [
        "name",
        "properties"
      ],
      "description": "A variable asset."
    },
    "schedules": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "Microsoft.Automation/automationAccounts/schedules",
            "schedules"
          ]
        },
        "name": {
          "type": "string"
        },
        "apiVersion": {
          "enum": [
            "2015-10-31"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string",
              "description": "The type of schedule."
            },
            "startTime": {
              "type": "string",
              "description": "The start time for the schedule."
            },
            "expiryTime": {
              "type": "string",
              "description": "The time the schedule will expire."
            },
            "isEnabled": {
              "oneOf": [
                {
                  "type": "boolean"
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "True/false indicating whether the schedule is enabled or not."
            },
            "interval": {
              "oneOf": [
                {
                  "type": "integer"
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
               ],              
              "description": "The interval for the schedule to recur on."
            },
            "frequency": {
              "type": "string",
              "description": "The schedule frequency.  This can be one time, hourly, or daily"
            },
            "creationTime": {
              "type": "string",
              "description": "The time the schedule was created in the Automation account."
            },
            "lastModifiedTime": {
              "type": "string",
              "description": "The last time the schedule was modified in the Automation account."
            },
            "nextRun": {
              "type": "string",
              "description": "The time of the next run."
            },
            "timeZone": {
              "type": "string",
              "description": "The time zone the schedule will run in.  Automation uses IANA time zones."
            }
          }
        }
      },
      "required": [
        "name",
        "properties"
      ],
      "description": "An Automation schedule asset."
    },
    "jobs": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "Microsoft.Automation/automationAccounts/jobs",
            "jobs"
          ]
        },
        "apiVersion": {
          "enum": [
            "2015-10-31"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "jobId": {
              "type": "string",
              "description": "The GUID for the runbook job ID"
            },
            "runbook": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "The name of the runbook used to start the job."
                    }
                  }
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "The runbook used to start the job."
            }
          }
        }
      },
      "required": [
        "properties"
      ],
      "description": "A runbook job."
    },
    "jobSchedules": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "Microsoft.Automation/automationAccounts/jobSchedules",
            "jobSchedules"
          ]
        },
        "apiVersion": {
          "enum": [
            "2015-10-31"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "jobScheduleId": {
              "type": "string",
              "description": "The GUID id for the job schedule instance."
            },
            "runbook": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "The name of the runbook to associate the schedule with."
                    }
                  }
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "The runbook to associate the schedule with.  Ensure the runbook is published before associating it with a schedule."
            },
            "schedule": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "The name of the schedule."
                    }
                  }
                },
                {
                  "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
                }
              ],
              "description": "The schedule to link to the runbook-schedule job instance."
            },
            "runOn": {
              "type": "string",
              "description": "The location to run the scheduled runbook on.  The scheduled job will either run in Azure or on the Hybrid Runbook Worker Group specified."
            }           
          }
        }
      },
      "required": [
        "properties"
      ],
      "description": "An Automation job schedule.  Creating a job schedule links a runbook to an Automation schedule asset.  The runbook will then start at the scheduled times."
    }
  }
}