{
  "id": "https://schema.management.azure.com/schemas/2017-07-01-privatepreview/Microsoft.IoTCentral.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Microsoft.IoTCentral",
  "description": "Microsoft IoTCentral Resource Types",
  "resourceDefinitions": {
    "IoTApps": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Microsoft.IoTCentral/IoTApps"
          ]
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "The name of IoT Central application"
        },
        "subdomain": {
          "oneOf": [
            {
              "type": "string",
              "pattern": "^[a-z0-9-]{1,63}$"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The subdomain name of IoT Central application url"
        },
        "sku": {
          "oneOf": [
            {
              "$ref": "#/definitions/AppSku"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "template": {
          "oneOf": [
            {
              "$ref": "#/definitions/AppTemplate"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "Predefined IoT Central application template"
        },
        "location": {
          "type": "string",
          "description": "The location where IoT Central application resource will be created"
        },
        "apiVersion": {
          "type": "string",
          "enum": [
            "2017-07-01-privatepreview"
          ]
        },
        "tags": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "Key-value pairs of additional properties for IoT Central application resource type"
        },
        "properties": {
          "oneOf": [
            {
              "$ref": "#/definitions/AppProperties"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The properties of IoT Central application resource"
        }
      },
      "required": [
        "type",
        "name",
        "subdomain",
        "sku",
        "template",
        "location",
        "apiVersion",
        "properties"
      ],
      "description": "Microsoft.IoTCentral/IoTApps"
    }
  },
  "definitions": {
    "AppSku": {
      "type": "object",
      "properties": {
        "name": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "F1",
                "S1"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "tier": {
          "type": "string",
          "readOnly": true,
          "description": "Pricing tier of the IoT Central application"
        },
        "capacity": {
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The number of units being provisioned"
        }
      },
      "required": [
        "name"
      ],
      "description": "The SKU information of IoT Central application"
    },
    "AppTemplate": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of IoT Central application template"
        },
        "version": {
          "type": "string",
          "description": "The version of IoT Central application template"
        }
      },
      "description": "The template of IoT Central application"
    },
    "AppProperties": {
      "type": "object",
      "properties": {
        "displayName": {
          "oneOf": [
            {
              "type": "string",
              "pattern": "^.{1,200}$"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The display name of IoT Central application"
        },
        "policies": {},
        "models": {},
        "rules": {},
        "actions": {}
      },
      "description": "Properties of IoT Central application"
    }
  }
}