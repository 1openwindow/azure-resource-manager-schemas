{
  "id": "http://schema.management.azure.com/schemas/2016-02-03/Microsoft.Devices.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Microsoft.Devices",
  "description": "Microsoft Devices Resource Types",
  "resourceDefinitions": {
    "IotHubs": {
      "type": "object",
      "properties": {
        "name": {
          "oneOf": [
            {
              "type": "string",
              "description": "The Resource name with the following regex pattern for the name ^(?![0-9]+$)(?!-)[a-zA-Z0-9-]{2,49}[a-zA-Z0-9]$",
              "pattern": "^(?![0-9]+$)(?!-)[a-zA-Z0-9-]{2,49}[a-zA-Z0-9]$",
              "minLength": 3,
              "maxLength": 50
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "type": {
          "type": "string",
          "description": "The Resource type.",
          "enum": [
            "Microsoft.Devices/IotHubs"
          ]
        },
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "The Resource tags."
        },
        "apiVersion": {
          "type": "string",
          "enum": [
            "2016-02-03"
          ]
        },
        "properties": {
          "oneOf": [
            {
              "$ref": "#/definitions/IotHubProperties"
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "sku": {
          "oneOf": [
            {
              "$ref": "#/definitions/IotHubSkuInfo"
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        }
      },
      "required": [
        "type",
        "apiVersion",
        "properties",
        "sku",
        "location",
        "name"
      ],
      "description": "Microsoft.Devices/IotHubs"
    }
  },
  "definitions": {
    "CloudToDeviceProperties": {
      "type": "object",
      "properties": {
        "maxDeliveryCount": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 1,
              "maximum": 100
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The max delivery count for the device queue. Range: 1-100"
        },
        "defaultTtlAsIso8601": {
          "type": "string",
          "description": "The default time to live for the device queue. Range: 1 Min (PT1M) - 2 Days (P1D)"
        },
        "feedback": {
          "oneOf": [
            {
              "$ref": "#/definitions/FeedbackProperties"
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        }
      },
      "description": "The Iot Hub Cloud-To-Device messaging properties"
    },
    "OperationsMonitoringProperties": {
      "description": "The Operation Monitoring properties.",
      "type": "object",
      "properties": {
        "events": {
          "type": "object",
          "additionalProperties": {
            "enum": [ "None", "Error", "Information", "Error, Information" ],
            "description": "The Operation Monitoring Level."
          }
        }
      }
    },
    "RoutingProperties": {
      "description": "The Routing properties.",
      "type": "object",
      "properties": {
        "endpoints": {
            "$ref": "#/definitions/RoutingEndpoints"
        },
        "routes": {
          "oneOf": [
            {
              "type": "array",
              "maxItems": 100,
              "items": {
                "$ref": "#/definitions/RouteProperties"
              }
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The Routing Rules for IotHub."
        },
        "fallbackRoute": {
            "$ref": "#/definitions/RouteProperties"
        }
      }
    },
    "RoutingEndpoints": {
      "description": "The Routing Endpoints property.",
      "type": "object",
      "maxItems": 10,
      "properties": {
        "eventHubs": {
            "$ref": "#/definitions/EventHubRoutingEndpoints"
        },
        "serviceBusQueues": {
            "$ref": "#/definitions/ServiceBusRoutingEndpoints"
        },
        "serviceBusTopics": {
            "$ref": "#/definitions/ServiceBusRoutingEndpoints"
        }
      }
    },
    "EventHubRoutingEndpoints": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RoutingEventHubProperties"
          }
        },
        {
          "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
        }
      ],
      "description": "The list of eventHub routing endpoints."
    },
    "ServiceBusRoutingEndpoints": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RoutingServiceBusProperties"
          }
        },
        {
          "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
        }
      ],
      "description": "The list of servicebus routing endpoints."
    },    
    "RoutingEventHubProperties": {
      "type": "object",
      "description": "Event Hub Properties",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the event hub"
        },
        "connectionString": {
          "type": "string",
          "description": "The connectionString of the event hub with send permissions"
        },
        "subscriptionId": {
          "type": "string",
          "description": "The subscriptionId of the servicebus namespace with send permissions"
        },
        "resourceGroup": {
          "type": "string",
          "description": "The resourceGroup of the servicebus namespace with send permissions"
        },
        "id": {
          "type": "string",
          "description": "The identifier for the route. This will be set by the server. Override this will cause create/ update IoT hub operations to fail. Do not pass an 'id' when attempting to create the IoT hub as this will cause a failure. When attempting to update the IoT hub pass in the same id that you get from IoT hub"
        }
      },
      "required": [
        "name",
        "connectionString"
      ]
    },
    "RoutingServiceBusProperties": {
      "type": "object",
      "description": "Service Bus properties",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of serviceBus"
        },      
        "connectionString": {
          "type": "string",
          "description": "The connectionstring for servicebus with send permissions"
        },
        "subscriptionId": {
          "type": "string",
          "description": "The subscriptionId for servicebus with send permissions"
        },
        "resourceGroup": {
          "type": "string",
          "description": "The resourceGroup for servicebus with send permissions"
        },
        "id": {
          "type": "string",
          "description": "The identifier for the route. This will be set by the server. Override this will cause create/ update IoT hub operations to fail. Do not pass an 'id' on CreateHub scenarios as this will cause create to fail. On UpdateHub scenario pass in the same id that you get from iotHub"
        }
      },
      "required": [
        "name",
        "connectionString"
      ]
    },
    "RouteProperties": {
      "description": "Route Properties",
      "type": "object",
      "properties": {
        "name": {
          "oneOf": [
            {
              "description": "The route name. Route name has to be unique and cannot start with a $, also route name should not exceed 64 characters",
              "type": "string"
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression" 
            }
          ]
        },
        "source": {
          "oneOf": [
            {
              "description": "The source from which the rule should run on e.g. DeviceMessages",
              "type": "string"
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression" 
            }
          ]
        },
        "endpointNames": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/EndpointNames"
              }
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The Routing Rules for IotHub."
        },    
        "isEnabled": {
          "oneOf": [
            {
              "description": "Set if the rule should be enabled or disabled",
              "type": "boolean"
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression" 
            }
          ]          
        }        
      },
      "required": [
        "name",
        "endpointNames",
        "source",
        "isEnabled"
      ]
    },
    "EndpointNames": {
      "oneOf": [
        {
          "description": "The endpoint name for the rule.",
          "type": "string"
        },
        {
          "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression" 
        }
      ]
    },
    "EventHubProperties": {
      "type": "object",
      "properties": {
        "retentionTimeInDays": {
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The retention time in days. Range of values [For F1: 1-1, S1: 1-7, S2: 1-7, S3: 1-7]."
        },
        "partitionCount": {
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The partition count. Range of values [For F1: 2-2, S1: 2-128, S2: 2-128, S3: 2-128]."
        }
      },
      "description": "The properties of the provisioned event hub used by the Iot Hub"
    },
    "FeedbackProperties": {
      "type": "object",
      "properties": {
        "lockDurationAsIso8601": {
          "type": "string",
          "description": "The lock duration for the feedback queue. Range: 5 Sec (PT5S) - 5 Min (PT5M)"
        },
        "ttlAsIso8601": {
          "type": "string",
          "description": "The time to live for the feedback queue. Range: 1 Min (PT1M) - 2 Days (P2D)"
        },
        "maxDeliveryCount": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 1,
              "maximum": 100
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The max delivery count. Range : 1-100"
        }
      },
      "description": "The Iot Hub Feedback Queue properties"
    },
    "IotHubProperties": {
      "type": "object",
      "properties": {
        "authorizationPolicies": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/SharedAccessSignatureAuthorizationRule"
              }
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The authorization rules."
        },
        "eventHubEndpoints": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/EventHubProperties"
              }
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The event hub endpoint properties."
        },
        "storageEndpoints": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/StorageEndpointProperties"
              }
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The list of storage endpoints where files can be uploaded. Currently only one storage account can be configured."
        },
        "enableFileUploadNotifications": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The flag which indicates whether file upload notification should be enabled. This is optional at iot hub level. When enabled upload notifications will be available."
        },
        "cloudToDevice": {
          "oneOf": [
            {
              "$ref": "#/definitions/CloudToDeviceProperties"
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ]
        },
        "ipFilterRules": {
          "oneOf": [
            {
              "type": "array",
              "maxItems": 10,
              "items": {
                "$ref": "#/definitions/IpFilterRule"
              }
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The IP filter rules. Each rule specifies if a source IP address or a range of source IP addresses should be accepted or rejected when connecting to a IotHub."
        },
        "routing": {
          "$ref": "#/definitions/RoutingProperties"
        },
        "comments": {
          "description": "The comments.",
          "type": "string"
        },
        "operationsMonitoringProperties": {
          "$ref": "#/definitions/OperationsMonitoringProperties"
        },
        "features": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "None",
                "DeviceManagement"
              ]
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The Capabilities/Features that need to be enabled for the Hub. Possible values include: 'None', 'DeviceManagement'"
        }
      },
      "description": "The Iot Hub properties"
    },
    "IotHubSkuInfo": {
      "type": "object",
      "properties": {
        "name": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "F1",
                "S1",
                "S2",
                "S3"
              ]
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The name of the Sku. Possible values include: 'F1', 'S1', 'S2', 'S3'"
        },
        "capacity": {
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression"
            }
          ],
          "description": "The number of units being provisioned. Range of values [For F1: 1-1, S1: 1-200, S2: 1-200, S3: 1-10]. To go above this range, call support."
        }
      },
      "description": "The Sku related information for the hub."
    },
    "SharedAccessSignatureAuthorizationRule": {
      "type": "object",
      "properties": {
        "keyName": {
          "type": "string",
          "description": "The name of the key."
        },
        "primaryKey": {
          "type": "string",
          "description": "The primary key."
        },
        "secondaryKey": {
          "type": "string",
          "description": "The secondary key."
        },
        "rights": {
          "enum": [
            "RegistryRead",
            "RegistryWrite",
            "ServiceConnect",
            "DeviceConnect",
            "RegistryRead, RegistryWrite",
            "RegistryRead, ServiceConnect",
            "RegistryRead, DeviceConnect",
            "RegistryWrite, ServiceConnect",
            "RegistryWrite, DeviceConnect",
            "ServiceConnect, DeviceConnect",
            "RegistryRead, RegistryWrite, ServiceConnect",
            "RegistryRead, RegistryWrite, DeviceConnect",
            "RegistryRead, ServiceConnect, DeviceConnect",
            "RegistryWrite, ServiceConnect, DeviceConnect",
            "RegistryRead, RegistryWrite, ServiceConnect, DeviceConnect"
          ],
          "description": "The access rights."
        }
      },
      "description": "The properties that describe the keys to access the IotHub artifacts."
    },
    "StorageEndpointProperties": {
      "type": "object",
      "properties": {
        "sasTtlAsIso8601": {
          "type": "string",
          "description": "SAS time to live. Range: 1 Min (PT1M) - 1 Day (P1D)"
        },
        "connectionString": {
          "type": "string",
          "description": "The account key credentials for storage account selected by customer for uploading files"
        },
        "containerName": {
          "type": "string",
          "description": "The root container name where all files will be uploaded"
        }
      },
      "description": "The properties of the Storage Endpoint provided by the customer for file upload"
    },
    "IpFilterRule": {
      "description": "IP filter Rule",
      "type": "object",
      "properties": {
        "filterName": {
          "oneOf": [
            {
              "description": "The name of the IP filter rule with the following regex pattern.",
              "type": "string",
              "pattern": "^[A-Za-z0-9-:.+%_#*?!(),=@;']{1,128}$",
              "minLength": 1,
              "maxLength": 128
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression" 
            }
          ]
        },
        "action": {
          "oneOf": [
            {
              "description": "The action desired - accept or reject.",
              "enum": [ "Accept", "Reject" ]
            },
            {
              "$ref": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#/definitions/expression" 
            }
          ]
        },
        "ipMask": {
            "description": "A string containing the IPAddress/range in CIDR notation such as 192.168.0.0/24.",
            "type": "string"
        }
      },
      "required": [
        "filterName",
        "action",
        "ipMask"
      ]
    }
  }
}
